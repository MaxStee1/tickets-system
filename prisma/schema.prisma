generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Person {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  email       String   @unique
  rut         String   @unique
  password    String   @db.Char(60)
  companyRut  String?  // Puede ser null
  isClient    Boolean  // Campo para indicar si es cliente o no
  tickets     Ticket[] // Relaci√≥n con los tickets
}

model Ticket {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  status      String   @default("open")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  personRut   String
  person      Person   @relation(fields: [personRut], references: [rut])
}
